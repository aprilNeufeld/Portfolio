{
	"compilerOptions": {
		"target": "es5",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"lib": [
			"es2015",
			"dom"
		],
		"skipLibCheck": true,
		"strict": true
	},
	"include": [
		"src"
	]
}
